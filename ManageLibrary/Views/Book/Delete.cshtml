@model ManageLibrary.Models.Book
@{
    ViewData["Title"] = "Xóa sách";
}
<h3>Bạn có chắc chắn muốn xóa sách này không?</h3>
<div class="mb-3">
    <label class="form-label">Mã sách</label>
    <input class="form-control" value="@Model.BookId" readonly />
</div>
<div class="mb-3">
    <label class="form-label">Tên sách</label>
    <input class="form-control" value="@Model.Name" readonly />
</div>

<div class="text-center">
    <form asp-action="Delete" asp-route-id="@Model.BookId" method="post">
        <button type="submit" class="btn btn-danger px-4">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary px-4">Hủy</a>
    </form>
</div>
