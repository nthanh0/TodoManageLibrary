@model ManageLibrary.Models.Reader

@{
    ViewData["Title"] = "Chỉnh sửa thông tin độc giả";
    Layout = "~/Views/Shared/Layout.cshtml";
    // Lấy giá trị ngày sinh và SĐT để hiển thị
    var dobString = Model.DateOfBirth?.ToString("yyyy-MM-dd") ?? "";
    var initialPhone = Model.Telephone ?? "";
}

<!-- Thêm CSS của thư viện intl-tel-input -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">@ViewData["Title"]: @Model.FullName</h3>
                </div>
                <div class="card-body">

                    <form asp-action="Edit" id="edit-reader-form">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Hidden ReaderId -->
                        <input type="hidden" asp-for="ReaderId" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label"></label>
                                <input asp-for="DateOfBirth" type="date" class="form-control" value="@dobString" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NationalId" class="form-label"></label>
                                <input asp-for="NationalId" class="form-control" />
                                <span asp-validation-for="NationalId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="TypeOfReader" class="form-label"></label>
                                <select asp-for="TypeOfReader" class="form-select">
                                    <option value="">-- Chọn loại độc giả --</option>
                                    <option value="Sinh viên">Sinh viên</option>
                                    <option value="Giảng viên">Giảng viên</option>
                                    <option value="Khác">Khác</option>
                                </select>
                                <span asp-validation-for="TypeOfReader" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email" class="form-control"
                                       title="Vui lòng nhập email hợp lệ (ví dụ: user@example.com)" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telephone" class="form-label"></label>
                                <input asp-for="Telephone" class="form-control" id="phone" value="@initialPhone" />
                                <span asp-validation-for="Telephone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Department" class="form-label"></label>
                            <input asp-for="Department" class="form-control" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>

                        <hr />
                    </form>

                    <!-- Hàng nút: Trái = Xóa, Phải = Quay lại + Lưu -->
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <div>
                            <form asp-action="Delete" asp-route-id="@Model.ReaderId" method="post" class="d-inline"
                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa độc giả @Model.FullName (ID: @Model.ReaderId) không?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Xóa độc giả
                                </button>
                            </form>
                        </div>
                        <div class="text-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-success" form="edit-reader-form">
                                <i class="fas fa-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Thêm JS của thư viện intl-tel-input -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script>
        const phoneInput = document.querySelector("#phone");

        // Khởi tạo thư viện
        const iti = window.intlTelInput(phoneInput, {
            initialCountry: "vn",
            separateDialCode: true,
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js"
        });

        // Đặt SĐT ban đầu (quan trọng cho Edit)
        iti.promise.then(function() {
            iti.setNumber("@initialPhone");
        });

        const form = document.querySelector("#edit-reader-form");
        form.addEventListener("submit", function() {
            const internationalNumber = iti.getNumber();
            phoneInput.value = internationalNumber;
        });
    </script>
}
