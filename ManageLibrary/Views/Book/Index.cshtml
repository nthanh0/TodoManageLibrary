@model IEnumerable<ManageLibrary.Models.Book>

@{
    ViewData["Title"] = "Quản lý sách";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>

    <form asp-action="Index" method="get" class="row g-2 align-items-end mb-3" style="max-width: 100%;">
        <div class="col-sm-8 col-md-9">
            <label for="searchString" class="form-label">Tìm theo tên sách hoặc tác giả</label>
            <input type="text" name="searchString" id="searchString" class="form-control"
                   placeholder="VD: Lập trình, Nguyễn Văn A..."
                   value="@ViewData["CurrentFilter"]" />
        </div>
        <div class="col-sm-4 col-md-3 text-end">
            <button type="submit" class="btn btn-primary">Tìm</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Đặt lại</a>
            <a asp-action="Add" class="btn btn-success ms-2">Thêm</a>
        </div>
    </form>

    <div class="table-responsive" style="max-height:60vh; overflow-y:auto;">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark text-center" style="position: sticky; top: 0; z-index: 1;">
                <tr>
                    <th>Mã sách</th>
                    <th>Tên sách</th>
                    <th>Tác giả</th>
                    <th>Nhà xuất bản</th>
                    <th>Thể loại</th>
                    <th>Năm XB</th>
                    <th>Vị trí</th>
                    <th>Giá (VNĐ)</th>
                    <th>Số trang</th>
                    <th>Số lượng</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="11" class="text-center">Không tìm thấy sách nào.</td>
                    </tr>
                }
                else
                {
                    @foreach (var b in Model)
                    {
                        <tr class="text-center">
                            <td>@b.BookId</td>
                            <td class="text-start" style="min-width: 250px;">@b.Name</td>
                            <td class="text-start" style="min-width: 150px;">@(b.Author?.Name ?? "N/A")</td>
                            <td class="text-start" style="min-width: 150px;">@(b.Publisher?.Name ?? "N/A")</td>
                            <td>@(b.Category?.Name ?? "N/A")</td>
                            <td>@b.YearOfPublic</td>
                            <td>@b.Position</td>
                            <td>@String.Format("{0:N0}", b.Cost)</td>
                            <td>@b.NumOfPage</td>
                            <td>@b.Quantity</td>
                            <td class="text-center" style="width: 160px;">
                                <a asp-action="Edit" asp-route-id="@b.BookId" class="btn btn-warning btn-sm">Sửa</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
